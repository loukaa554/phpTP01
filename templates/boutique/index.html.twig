{% extends 'base.html.twig' %}

{% block title %}
	Boutique
{% endblock %}

{% block body %}
<div class="card col-md-12">
    <div class="card-header">
        <a class="btn-back text-secondary" href="{{ path('app_default_index') }}">
            <i class="fas fa-2x fa-arrow-circle-left"></i>
        </a>
        <h3>
            <i class="fas fa-store"></i>
            Boutique
            <span class="badge badge-pill badge-info">{{ categories|length }}</span>
            rayon(s) proposé(s)
        </h3>
    </div>
    <div class="card-body row">
        {% if categories %}
            {% for category in categories %}
                <div class="col-md-3">
                    <div class="card clickable" onclick="location.href='{{ path("app_boutique_rayon", { idCategorie: loop.index }) }}'">
                        <img src="{{ asset(category.visuel) }}" class="card-img-top" alt="{{ category.libelle }}">
                        <div class="card-body">
                            <h4 class="card-title">{{ category.libelle }}</h4>
                            <p class="card-text">
                                <i>{{ category.texte }}</i>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p class="text-center w-100">Aucune catégorie disponible.</p>
        {% endif %}
    </div>
</div>
{% endblock %}