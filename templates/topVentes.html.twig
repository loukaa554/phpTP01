<div class="col-md-2" style="padding: 10px;">
    <div class="card">
        <div class="card-header text-center">
            <h5>
                <i class="fas fa-star"></i>
                Top Ventes
                <i class="fas fa-star"></i>
            </h5>
        </div>
        <div class="card-body text-muted text-center">
            <ul class="list-group">
                {% for vente in topVentes %}
                    <a href="{{ path('app_boutique_rayon', { idCategorie: vente.produit.categorie.id }) }}">
                        <li class="list-group-item text-center clickable top-produit">
                            <img src="{{ asset(vente.produit.visuel) }}" style="height: 40px;">
                            <p class="top-produit">
                                {{ vente.produit.libelle }}<br>
                                <i>{{ vente.quantiteTotale }} vente(s)</i>
                            </p>
                        </li>
                    </a>
                {% else %}
                    <li class="list-group-item text-center">
                        <p>Aucun produit en top ventes pour le moment.</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
