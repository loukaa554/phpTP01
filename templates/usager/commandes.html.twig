{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <a class="btn-back text-secondary" href="{{ path('app_usager_index') }}">
                <i class="fas fa-2x fa-arrow-circle-left"></i>
            </a>
            <h3>Mes
                <span class="badge badge-pill badge-info">1</span>
                Commande(s)
            </h3>
        </div>
        <div class="card-body row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Voir Détails</th>
                    <th>Date</th>
                    <th class="text-right">Montant</th>
                    <th>Validation</th>
                </tr>
                </thead>
                <tbody>
                {% if commandes %}
                    {% for commande in commandes %}
                        <tr>
                            <td>
                                <a class="btn btn-sm btn-danger" href="{{ path('app_usager_details',
                                    {id:commande.id})
                                 }}">Commande N°
                                    <span class="badge badge-light">{{ commande.id }}</span>
                                </a>
                            </td>
                            <td>{{ commande.dateCreation|date('d/m/Y H:i') }}</td>
                            <td class="text-right">
                                {{ commande.total }}&nbsp;€
                            </td>
                            <td>
                                <i class="fas fa-hourglass-half text-danger"></i>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table></div></div>
{% endblock %}
